{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "autoAttachChildProcesses": true,
            "program": "${workspaceFolder}/src/bin/www",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Launch Chrome to Debug ViewUrl Page",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000/viewurl/",  // Set your local dev URL here
            "webRoot": "${workspaceFolder}/src/public",  // Adjust this to the root where definition.js is located
            "sourceMaps": true,  // If using source maps
            "trace": true,        // Enable logging to help diagnose potential issues
            "skipFiles": ["<node_internals>/**"]  // Skip Node internals
         }
    ]
}
